{
  "name": "audit-ci",
  "version": "1.0.0",
  "description": "Manages running npm audit in CI environments",
  "license": "Apache-2.0",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/audit-ci.git"
  },
  "keywords": [
    "audit",
    "ci",
    "npm",
    "security",
    "travis",
    "travis-ci",
    "circleci"
  ],
  "bin": {
    "audit-ci": "bin/audit-ci"
  },
  "files": [
