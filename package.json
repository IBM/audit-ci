{
  "name": "audit-ci",
  "version": "6.0.0",
  "description": "Audits npm and yarn projects in CI environments",
  "license": "Apache-2.0",
  "main": "./dist/audit-ci.js",
  "homepage": "https://github.com/IBM/audit-ci",
  "bugs": "https://github.com/IBM/audit-ci/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/audit-ci.git"
  },
  "keywords": [
    "audit",
    "ci",
    "npm",
    "yarn",
    "security",
    "github",
    "actions",
    "github-actions",
    "circleci"
  ],
  "bin": {
    "audit-ci": "./dist/bin.js"
  },
  "files": [
    "dist/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.js,.cjs",
    "lint:fix": "eslint . --ext .ts,.ts,.cjs --fix",
    "format": "prettier --write lib test",
    "test": "mocha --exit --timeout 40000 --recursive --reporter spec test/*.spec.js"
  },
  "engines": {
    "node": ">=12.9.0"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "escape-string-regexp": "^4.0.0",
    "event-stream": "4.0.1",
    "jju": "^1.4.0",
    "JSONStream": "^1.3.5",
    "readline-transform": "1.0.0",
    "semver": "^7.0.0",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/event-stream": "^4.0.0",
    "@types/jju": "^1.4.2",
    "@types/jsonstream": "^0.8.30",
    "@types/node": "^16.11.26",
    "@types/readline-transform": "^1.0.1",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm run test"
    }
  }
}
