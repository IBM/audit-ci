{
  "name": "audit-ci",
  "version": "2.1.0",
  "description": "Audits npm and yarn projects in CI environments",
  "license": "Apache-2.0",
  "main": "./lib/audit-ci.js",
  "homepage": "https://github.com/IBM/audit-ci",
  "bugs": "https://github.com/IBM/audit-ci/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/audit-ci.git"
  },
  "keywords": [
    "audit",
    "ci",
    "npm",
    "yarn",
    "security",
    "travis",
    "travis-ci",
    "circleci"
  ],
  "bin": {
    "audit-ci": "bin/audit-ci"
  },
  "files": [
    "bin",
    "lib/*",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint -c ./.eslintrc.json **/*.js",
    "test": "mocha --exit --timeout 40000 --recursive --reporter spec test/*.js"
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "cross-spawn": "6.0.5",
    "event-stream": "4.0.1",
    "readline-transform": "0.9.0",
    "semver": "^6.0.0",
    "yargs": "12.0.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "mocha": "^6.1.4",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm run test"
    }
  }
}
