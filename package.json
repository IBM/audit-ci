{
  "name": "audit-ci",
  "version": "6.3.0",
  "description": "Audits NPM, Yarn, and PNPM projects in CI environments",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/IBM/audit-ci",
  "bugs": "https://github.com/IBM/audit-ci/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:IBM/audit-ci.git"
  },
  "keywords": [
    "audit",
    "ci",
    "npm",
    "yarn",
    "pnpm",
    "security",
    "github",
    "actions",
    "github-actions",
    "circleci"
  ],
  "bin": {
    "audit-ci": "./dist/bin.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.js,.cjs",
    "lint:fix": "eslint . --ext .ts,.js,.cjs --fix",
    "format": "prettier --write lib test",
    "test": "c8 --check-coverage mocha \"test/*.spec.js\"",
    "schema": "ts-json-schema-generator -p ./docs/schema.d.ts -o ./docs/schema.json -t Schema"
  },
  "engines": {
    "node": ">=12.9.0"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "escape-string-regexp": "^4.0.0",
    "event-stream": "4.0.1",
    "jju": "^1.4.0",
    "JSONStream": "^1.3.5",
    "readline-transform": "1.0.0",
    "semver": "^7.0.0",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/event-stream": "^4.0.0",
    "@types/jju": "^1.4.2",
    "@types/jsonstream": "^0.8.30",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.47",
    "@types/readline-transform": "^1.0.1",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.11",
    "@types/yargs": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "audit-types": "^0.5.3",
    "c8": "^7.11.3",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "sinon": "^13",
    "ts-json-schema-generator": "^0.98.0",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm run test"
    }
  }
}
